// 登録フォームの送信処理
const registrationForm = document.getElementById('registration-form').querySelector('form');
registrationForm.addEventListener('submit', (event) => {
    event.preventDefault();
    // 登録処理を行う (ユーザー情報をサーバーに送信)
    // 成功したら、ログイン画面を表示
});

// ログインフォームの送信処理
const loginForm = document.getElementById('login-form').querySelector('form');
loginForm.addEventListener('submit', (event) => {
    event.preventDefault();
    // ログイン処理を行う (認証情報をサーバーに送信)
    // 成功したら、ユーザー情報画面を表示
});

// ログアウトボタンのクリック処理
const logoutButton = document.getElementById('logout-button');
logoutButton.addEventListener('click', () => {
    // ログアウト処理を行う (サーバーにログアウト要求を送信)
    // 成功したら、ログイン画面を表示
});

// ユーザー情報画面の表示と非表示
const userArea = document.getElementById('user-area');
const matchingArea = document.getElementById('matching-area');
const registrationFormArea = document.getElementById('registration-form');
const loginFormArea = document.getElementById('login-form');

// ログイン時にユーザー情報画面を表示
function showUserArea() {
    userArea.style.display = 'block';
    matchingArea.style.display = 'block';
    registrationFormArea.style.display = 'none';
    loginFormArea.style.display = 'none';
}

// ログアウト時にログイン画面を表示
function showLoginForm() {
    registrationFormArea.style.display = 'block';
    loginFormArea.style.display = 'block';
    userArea.style.display = 'none';
    matchingArea.style.display = 'none';
}

// ユーザー情報取得と表示
function displayUserProfile() {
    // サーバーからユーザー情報を取得
    fetch('/user-info')
        .then(response => response.json())
        .then(data => {
            // ユーザー情報でプロフィールエリアを更新
            const userProfile = document.getElementById('user-profile');
            userProfile.innerHTML = `
                <div class="user-info">
                    <!-- ユーザーの画像、名前、簡単な自己紹介など -->
                </div>
                <button class="edit-button">プロフィール編集</button>
            `;
        });
}

// マッチングユーザー取得と表示
function displayMatchingUsers() {
    // サーバーからマッチングユーザー一覧を取得
    fetch('/matching-users')
        .then(response => response.json())
        .then(data => {
            // ユーザー情報でマッチングエリアを更新
            const matchingList = document.getElementById('matching-list');
            matchingList.innerHTML = ''; // 既存のユーザーをクリア
            data.forEach(user => {
                matchingList.innerHTML += `
                    <div class="user-card">
                        <!-- マッチングしたユーザーの画像、名前、簡単な情報など -->
                    </div>
                `;
            });
        });
}

// ログイン成功時に実行
showUserArea();
displayUserProfile();
displayMatchingUsers();
